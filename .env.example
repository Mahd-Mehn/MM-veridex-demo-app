# Veridex Test App - Environment Variables
# Copy this to .env.local and fill in your values

# ============================================================================
# Network Configuration
# ============================================================================

# Network mode (testnet or mainnet)
NEXT_PUBLIC_NETWORK=testnet

# ============================================================================
# Relayer Configuration (Required for Gasless Transactions)
# ============================================================================

# Backend relayer URL (SERVER-SIDE ONLY - not exposed to browser)
# This is used by the /api/relayer proxy to forward requests
# The frontend uses /api/relayer which hides this URL from Network tab
RELAYER_BACKEND_URL=https://amused-kameko-veridex-demo-37453117.koyeb.app

# Legacy: Direct relayer URL (deprecated - use RELAYER_BACKEND_URL instead)
# Only use if you want to bypass the proxy (not recommended)
# NEXT_PUBLIC_RELAYER_URL=

# Relayer API key (if authentication is enabled)
NEXT_PUBLIC_RELAYER_API_KEY=

# ============================================================================
# RPC URLs (Optional - Defaults to public endpoints)
# ============================================================================

# For production, use private RPC endpoints for reliability
# Services: Alchemy, Infura, QuickNode, Ankr

# EVM Chains (Testnet)
NEXT_PUBLIC_BASE_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_OPTIMISM_RPC_URL=https://sepolia.optimism.io
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# EVM Chains (Mainnet - uncomment when ready)
# NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
# NEXT_PUBLIC_OPTIMISM_RPC_URL=https://mainnet.optimism.io
# NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Non-EVM Chains
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_APTOS_RPC_URL=https://fullnode.testnet.aptoslabs.com/v1
NEXT_PUBLIC_SUI_RPC_URL=https://fullnode.testnet.sui.io:443
NEXT_PUBLIC_STARKNET_RPC_URL=https://starknet-sepolia.public.blastapi.io/rpc/v0_7

# ============================================================================
# Analytics & Monitoring (Optional)
# ============================================================================

# Posthog analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# Logging (Production)
# ============================================================================

# Disable console logs in production (set to 'true' to disable)
NEXT_PUBLIC_DISABLE_LOGS=false

# Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG=false

# Enable experimental features
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false
